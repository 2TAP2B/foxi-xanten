---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import Feature from '../components/blocks/features/FeatureSticky.astro'
import Hero from '../components/blocks/hero/PageHeader.astro'
import CTA from '../components/blocks/CTA/BasicDark.astro'

// Data
import featuresData from '../data/json-files/featuresData.json'
// - Feature Categories
const featuresMastodon = featuresData.filter((feature) => feature.category === 'Mastodon')
const featuresVaultwarden = featuresData.filter((feature) => feature.category === 'Vaultwarden')
const featuresMatrix = featuresData.filter((feature) => feature.category === 'Matrix')
const featuresSignal = featuresData.filter((feature) => feature.category === 'Signal')
const featuresPingvin = featuresData.filter((feature) => feature.category === 'Pingvin')

// Content
// - SEO
const SEO = {
	title: 'xanten.cc | Selbstbestimmt im digitalen Raum',
	description:
		"Wir bieten digitale Dienste für ein soziales Miteinander und stärken die Nachbarschaft in Xanten."
}
// - Page Header
const header = {
	title: 'Hier findest du alle <strong>Features</strong> unserer Apps.',
	text: 'Wo liegen die Vorteile dieser Apps, was sind die unterschieden? Antworten findest du hier!'
}
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero title={header.title} text={header.text} />
	<Feature
	    image="/apps/mastodon.svg"
		title="Mastodon"
		text="Mastodon ist ein dezentraler Mikroblogging-Dienst."
		imageLink="/apps"
		data={featuresMastodon}
	/>
	<Feature
	    image="/apps/element.svg"
		title="Matrix"
		text="Matrix ist ein offenes, dezentrales Kommunikationsprotokoll für sichere und interoperable Echtzeitnachrichten, VoIP und Videoanrufe. Es ermöglicht Nutzern, über verschiedene Server hinweg zu kommunizieren, während Ende-zu-Ende-Verschlüsselung für Datenschutz sorgt."
		data={featuresMatrix}
		imageLink="/apps#matrix"
		classes="bg-neutral-50 dark:bg-neutral-900"
	/>
	<Feature
	    image="/apps/vaultwarden.svg"
		title="Vaultwarden"
		text="Vaultwarden ist eine leichtgewichtige, selbstgehostete Alternative zu Bitwarden, einem sicheren Open-Source-Passwort-Manager. Es ermöglicht die verschlüsselte Speicherung und Verwaltung von Passwörtern sowie das sichere Teilen von Zugangsdaten, ohne auf externe Cloud-Dienste angewiesen zu sein."
		data={featuresVaultwarden}
		imageLink="/apps#vaultwarden"
	/>
	<Feature
	    image="/apps/signal.svg"
		title="Signal"
		text="Signal ist ein sicherer Messenger-Dienst, der Ende-zu-Ende-Verschlüsselung für Nachrichten, Anrufe und Medien bietet. Die Open-Source-App wird von der gemeinnützigen Signal Foundation betrieben und legt großen Wert auf Datenschutz, indem sie keine Nutzerdaten speichert oder weitergibt."
		data={featuresSignal}
		classes="bg-neutral-50 dark:bg-neutral-900"
		imageLink="/apps#signal"
	/>
	<Feature
	    image="/apps/pingvin-share.svg"
		title="Pingvin Share"
		text="Pingvin Share ist ein Open-Source-Dienst zum sicheren Teilen von Dateien, ähnlich wie WeTransfer."
		data={featuresPingvin}
		imageLink="/apps#pingvin"
	/>
</Layout>
