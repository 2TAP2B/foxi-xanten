---
// About Page with Team Section
// ------------
// Description: About section with project info and a team grid with images and contact links.
// Properties:
// - classes: Additional classes to be added to the Section

// Components
// - Layout
import Section from '../../ui/Section.astro'
import Row from '../../ui/Row.astro'
import Col from '../../ui/Col.astro'
// - UI
import Card from '../../ui/cards/BasicCard.astro'

//  Props
type Props = {
	classes?: string,
	team?: {
		name: string,
		role: string,
		image: string,
		description: string,
		contacts?: { type: string, link: string, icon: any }[]
	}[]
}
const { classes, team = [
	{
		name: "Max Mustermann",
		role: "Projektleiter",
		image: "/images/max.jpg",
		description: "Max kümmert sich um die Koordination und Planung aller Aktivitäten. Er sorgt dafür, dass alle Prozesse reibungslos ablaufen und das Team optimal zusammenarbeitet.",
		contacts: [
			{ type: "icon", link: "mailto:max@example.com" }
		]
	},
	{
		name: "Erika Musterfrau",
		role: "Entwicklerin",
		image: "/logo.svg",
		description: "Erika ist verantwortlich für die technische Umsetzung des Projekts. Sie entwickelt innovative Lösungen und sorgt für eine stabile Codebasis.",
		contacts: [
			{ type: "icon", link: "mailto:erika@example.com" }
		]
	}
] } = Astro.props
---

<Section id="about" classes={`${classes} bg-gray-100 py-16`}>
	<Row>
		<Col span="12" align="center" classes="mb-12 max-w-4xl mx-auto">
			<h2 class="text-balance text-4xl font-bold text-gray-800">About <strong>Hilfe!</strong></h2>
			<p class="pb-0 text-lg text-gray-600 leading-relaxed">
				Willkommen bei Hilfe! Unser Ziel ist es, Menschen zusammenzubringen und Unterstützung zu bieten. Egal, ob du Fragen hast oder aktiv mitwirken möchtest – wir sind für dich da!
			</p>
		</Col>
	</Row>
	<Row>
		{team.map(member => (
			<Col span="3" classes="flex flex-col gap-6">
				<Card classes="text-center dark:!bg-neutral-800/50 p-6 shadow-lg rounded-lg">
					<img src={member.image} alt={member.name} class="w-24 h-24 mx-auto rounded-full border-4 border-fuchsia-500" />
					<h3 class="mt-4 text-xl font-semibold text-gray-900">{member.name}</h3>
					<p class="text-sm text-blue-600 font-medium">{member.role}</p>
					<p class="mt-2 text-gray-700">{member.description}</p>
					<div class="flex justify-center gap-3 mt-4">
						{member.contacts?.map(contact => (
							<a href={contact.link} target="_blank" rel="noopener noreferrer" class="text-blue-500 hover:text-blue-700 transition">
							</a>
						))}
					</div>
				</Card>
			</Col>
		))}
	</Row>
</Section>
